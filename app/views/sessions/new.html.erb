<h2 id="login">Login</h2>

<div class="manage-padding">
  <%= form_with model: @speaker, url: "/sessions", method: "post", class: "form-style" do |f| %>
    <div>
      <%= f.email_field :email, placeholder: "Email", class: "mail" %>
    </div>
    <div>
      <%= f.password_field :password, placeholder: "Password", class: "pass" %>
    </div>
    <%= f.submit "Log In", class: "button" %>
  <% end %>
</div>
